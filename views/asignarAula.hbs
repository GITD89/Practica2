{{#> sidebar }}
<h1>{{title}}</h1>
<form action="/asignar-aula" method="post">
  <div class="form-group">
    <label for="date">Horario (Inicio)</label>
    <input type="datetime-local" class="form-control" id="date" name="date">
  </div>
  <div class="form-group">
    <label for="dur">Duración (Horas)</label>
    <input type="number" class="form-control" id="dur" name="hours">
  </div>
      <div class="form-group">
    <label for="sem">Duración (Semanas)</label>
    <input type="number" class="form-control" id="sem" name="weeks">
  </div>
  <div class="form-group">
    <select class="custom-select" name="class">
      <option selected>Clase</option>
      <option value="1">One</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>
  </div>
  <div class="form-group">
    <select class="custom-select" name="teacher">
      <option selected>Maestro</option>
      <option value="1">One</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>
  </div>
    <div class="form-group">
    <select class="custom-select" name="room">
      <option selected>Aula</option>
      <option value="1">One</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>
  </div>
  <div class="form-group">
    <select class="custom-select" name="carrera">
      <option selected>Carrera</option>
      <option value="1">One</option>
      <option value="2">Two</option>
      <option value="3">Three</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Asignar aula</button>
</form>
{{/sidebar}}